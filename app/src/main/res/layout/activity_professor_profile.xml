<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sms.myunibapp.profileUser.ProfessorProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:background="@drawable/custom_layout_view"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/profile"
                android:textSize="30sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/poppins_semibold"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pictureProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_man"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:text="@string/general"
            android:textSize="22sp"
            android:textColor="@color/color_text"
            android:fontFamily="@font/poppins_semibold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/background_color_app"
        app:cardCornerRadius="13dp"
        app:cardElevation="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/surname"
                android:textSize="18sp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/professore_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="18sp"
                android:textColor="@color/color_text"
                android:fontFamily="@font/poppins_semibold" />

            <TextView
                android:id="@+id/professore_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aula_professori"
                android:textColor="@color/color_text"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"/>

            <TextView
                android:id="@+id/aula_professore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/insegnamenti_professori"
        android:textSize="22sp"
        android:textColor="@color/color_text"
        android:fontFamily="@font/poppins_semibold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/background_color_app"
        app:cardCornerRadius="13dp"
        app:cardElevation="13dp">

        <LinearLayout
            android:id="@+id/insegnamenti_professore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>