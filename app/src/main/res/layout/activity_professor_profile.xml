<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sms.myunibapp.ProfessorProfile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/profilo_professori"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/widgets_background"
        app:cardCornerRadius="13dp"
        app:cardElevation="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/surname"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/professore_cognome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/professore_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/aula_professori"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/aula_professore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/insegnamenti_professori"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/widgets_background"
        app:cardCornerRadius="13dp"
        app:cardElevation="13dp">

        <LinearLayout
            android:id="@+id/insegnamenti_professore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>