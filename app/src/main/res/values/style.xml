<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_color_app</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="errorTextColor">#FD1E1E</item>
        <item name="android:navigationBarColor">@color/background_color_app</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FullScreenSchede" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Add attributes here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/background_color_app</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background_color_app</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <!-- To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">true</item>
    </style>
</resources>