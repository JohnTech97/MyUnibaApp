<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myunibapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">
        <activity android:name="sms.myunibapp.ForgotPasswordActivity" />
        <activity android:name="sms.myunibapp.DettaglioEsame" />
        <activity android:name="sms.myunibapp.schedeNavigationBar.EsamiPrenotabili" />
        <activity android:name="sms.myunibapp.schedeNavigationBar.Segreteria" />
        <activity android:name="sms.myunibapp.schedeNavigationBar.Profilo" />
        <activity android:name="sms.myunibapp.schedeNavigationBar.BachecaEsiti" />
        <activity android:name="sms.myunibapp.SplashScreen">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sms.myunibapp.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name="sms.myunibapp.schedeNavigationBar.Libretto" />
        <activity android:name="sms.myunibapp.Home" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>